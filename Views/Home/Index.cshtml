@model EventRecommender.Controllers.HomeVm
@{
    ViewData["Title"] = "Home";
}

@if (ViewBag.Msg != null)
{
    <div class="alert alert-success">@ViewBag.Msg</div>
}

@if (Model.Recommended?.Any() == true)
{
    <h3>Recommended for you</h3>
    <div class="row row-cols-1 row-cols-md-3 g-3 mb-4">
        @foreach (var e in Model.Recommended)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-controller="Events" asp-action="TrackAndShow" asp-route-id="@e.EventId">@e.Title</a>
                        </h5>
                        <div class="text-muted small">@e.Category?.Name · @e.Organizer?.Name</div>
                        <div class="text-muted small">@e.DateTime</div>
                        <p class="card-text mt-2">@e.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
}

<h3>Trending now</h3>
@if (Model.TrendingOverall?.Any() == true)
{
    <div class="row row-cols-1 row-cols-md-3 g-3 mb-4">
        @foreach (var e in Model.TrendingOverall)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-controller="Events" asp-action="TrackAndShow" asp-route-id="@e.EventId">@e.Title</a>
                        </h5>
                        <div class="text-muted small">@e.Category?.Name · @e.Organizer?.Name</div>
                        <div class="text-muted small">@e.DateTime</div>
                        <p class="card-text mt-2">@e.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">No trending events yet.</p>
}

@if (Model.TrendingByCategory?.Any() == true)
{
    @foreach (var cat in Model.TrendingByCategory)
    {
        <h3>Trending in @cat.CategoryName</h3>
        <div class="row row-cols-1 row-cols-md-3 g-3 mb-4">
            @foreach (var e in cat.Events)
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a asp-controller="Events" asp-action="TrackAndShow" asp-route-id="@e.EventId">@e.Title</a>
                            </h5>
                            <div class="text-muted small">@e.Organizer?.Name</div>
                            <div class="text-muted small">@e.DateTime</div>
                            <p class="card-text mt-2">@e.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}

